{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    // "strictNullChecks": true,
    // "noImplicitAny": false,
    // "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/core-tbt": ["apps/core-tbt/src"],
      "@app/core-tbt/*": ["apps/core-tbt/src/*"],
      "@libs/core-infrastructure": ["libs/core-infrastructure/src"],
      "@libs/core-infrastructure/*": ["libs/core-infrastructure/src/*"],
      "@libs/core-domain": ["libs/core-domain/src"],
      "@libs/core-domain/*": ["libs/core-domain/src/*"],
      "@libs/core-shared": ["libs/core-shared/src"],
      "@libs/core-shared/*": ["libs/core-shared/src/*"]
    }
  }
}
